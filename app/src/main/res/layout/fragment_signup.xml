<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signupScrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="false"
    android:background="#D9F3FD"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ellipse" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:text="Adventure begins\nhere!"
                android:textColor="#008BBF"
                android:textSize="@dimen/_30ssp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_black" />
        </FrameLayout>

        <TextView
            android:id="@+id/subText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Sign up to plan smarter, travel better, and explore more."
            android:textColor="#101010"
            android:textSize="@dimen/_15ssp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signUpCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/white_card"
            android:paddingBottom="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingTop="@dimen/_14sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="@dimen/_20sdp">

                <TextView
                    android:id="@+id/titleSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign-up"
                    android:textColor="#101010"
                    android:textSize="@dimen/_24ssp"
                    android:fontFamily="@font/roboto_bold"/>

                <LinearLayout
                    android:id="@+id/emailLabelRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#737373"
                        android:textSize="@dimen/_14ssp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:hint="name@domain.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/input_border"
                    android:padding="@dimen/_12sdp"
                    android:textColor="#737373"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto"
                    android:lines="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/lblPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Password"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#737373"
                        android:textSize="@dimen/_14ssp"/>

                    <TextView
                        android:id="@+id/tvConfirmErrorInline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Both password are different)"
                        android:textColor="#D32F2F"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/_4sdp"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/passwordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_border"
                    android:paddingVertical="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_2sdp">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:textColor="#737373"
                        android:fontFamily="@font/roboto"
                        android:textSize="@dimen/_12ssp"
                        android:padding="@dimen/_12sdp"
                        android:background="@null"
                        android:lines="1"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ivTogglePass"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivTogglePass"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/eyedisable"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="12dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/pwRulesTitlePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Password must contain at least"
                    android:textColor="#666666"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="12sp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/pwRulesListPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/pwRuleLenPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓  8 characters"
                        android:textColor="#808080"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/pwRuleUpperPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  an uppercase Character"
                        android:textColor="#808080"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/pwRuleLowerPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  a lowercase Character"
                        android:textColor="#808080"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/pwRuleSpecialPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  One Special character"
                        android:textColor="#808080"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/pwRuleDigitPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  One number"
                        android:textColor="#808080"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/lblConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Confirm Password"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#737373"
                    android:textSize="@dimen/_14ssp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/confirmContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_border"
                    android:padding="@dimen/_2sdp">

                    <EditText
                        android:id="@+id/etConfirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textColor="#737373"
                        android:fontFamily="@font/roboto"
                        android:textSize="@dimen/_12ssp"
                        android:background="@null"
                        android:lines="1"
                        android:padding="@dimen/_12sdp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ivToggleConfirm"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivToggleConfirm"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/eyedisable"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/_8sdp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/pwRulesTitleConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Password must contain at least"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/pwRulesListConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/pwRuleLenConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓  8 characters"
                        android:textColor="#808080"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/pwRuleUpperConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  an uppercase Character"
                        android:textColor="#808080"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/pwRuleLowerConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  a lowercase Character"
                        android:textColor="#808080"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/pwRuleSpecialConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  One Special character"
                        android:textColor="#808080"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/pwRuleDigitConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="✓  One number"
                        android:textColor="#808080"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/custom_checkbox" />

                    <TextView
                        android:id="@+id/tvTermsPrefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="I accept all the"
                        android:fontFamily="@font/roboto"
                        android:textColor="#737373"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tvTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="Terms and Condition"
                        android:fontFamily="@font/roboto"
                        android:textColor="#00C896"
                        android:textSize="@dimen/_10ssp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/next_button"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:text="Sign-up"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16ssp"/>

                <LinearLayout
                    android:id="@+id/llBottomAuth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tvHaveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#737373"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/tvSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#00C896"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
