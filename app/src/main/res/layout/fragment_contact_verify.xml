<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactOtp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/midGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25" />


                <TextView
                    android:id="@+id/verifyOtpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textColor="#101010"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/otpError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/verifyOtpTitle"
                    app:layout_constraintBottom_toBottomOf="@id/verifyOtpTitle"
                    />


                <TextView
                    android:id="@+id/otpSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP is send to your registered Phone no."
                    android:textColor="#999999"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/verifyOtpTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/hiddenOtpEditText"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:cursorVisible="true"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:importantForAccessibility="no"
                    android:imeOptions="flagNoExtractUi"
                    android:alpha="0"
                    app:layout_constraintTop_toTopOf="@id/otpBoxesLayout"
                    app:layout_constraintStart_toStartOf="@id/otpBoxesLayout" />

                <LinearLayout
                    android:id="@+id/otpBoxesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/otpSubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView android:id="@+id/box1" style="@style/OtpBoxStyled"/>
                    <TextView android:id="@+id/box2" style="@style/OtpBoxStyled"/>
                    <TextView android:id="@+id/box3" style="@style/OtpBoxStyled"/>
                    <TextView android:id="@+id/box4" style="@style/OtpBoxStyled"/>
                    <TextView android:id="@+id/box5" style="@style/OtpBoxStyled"/>
                    <TextView android:id="@+id/box6" style="@style/OtpBoxStyled"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend OTP"
                    android:textColor="#00C896"
                    android:textSize="14sp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/otpBoxesLayout"
                    app:layout_constraintEnd_toEndOf="@id/otpBoxesLayout"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/bottom_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.92" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@drawable/next_button"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    app:backgroundTint="#00B487"
                    android:paddingVertical="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btnPrev"
                    android:layout_marginBottom="18dp"
                    />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textSize="18sp"
        android:textColor="#00C896"
        android:background="@drawable/button_previous"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        app:backgroundTint="@null"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_guide"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
