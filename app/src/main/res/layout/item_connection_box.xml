<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box_connection_root"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="6dp"
    android:gravity="center"
    android:background="@drawable/bg_box_card_selector">

    <ImageView
        android:id="@+id/iv_connection_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_avatar_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="avatar"
        android:layout_gravity="center"
        android:background="@drawable/bg_avatar_circle" />

    <TextView
        android:id="@+id/tv_connection_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textStyle="600" />

    <TextView
        android:id="@+id/tv_connection_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Â· 2 trips"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_marginTop="2dp"
        android:alpha="0.8"/>
</LinearLayout>
