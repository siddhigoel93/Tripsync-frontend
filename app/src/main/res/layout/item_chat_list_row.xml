<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@android:color/transparent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/row_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_1"
        android:background="@drawable/circle_white_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/row_avatar"
        app:layout_constraintTop_toTopOf="@id/row_avatar"
        app:layout_constraintEnd_toStartOf="@id/row_time"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/row_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last message preview goes here."
        android:textSize="13sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintStart_toStartOf="@id/row_name"
        app:layout_constraintTop_toBottomOf="@id/row_name"
        app:layout_constraintEnd_toStartOf="@id/row_time" />

    <TextView
        android:id="@+id/row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:00"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/row_name" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_300"
        app:layout_constraintTop_toBottomOf="@id/row_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
