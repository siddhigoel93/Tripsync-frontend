<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.tripsync.ConnectionsTripmatesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="People"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_search_black_24"
                    android:inputType="text" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_connections_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connections"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- vertical list for Connections (short list) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_connections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:listitem="@layout/item_connection_row" />

        <TextView
            android:id="@+id/tv_tripmates_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tripmates"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tripmates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:listitem="@layout/item_tripmate_row" />

    </LinearLayout>
</ScrollView>
