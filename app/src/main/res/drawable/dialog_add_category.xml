<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/budget_inner_card_white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:textColor="#101010"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ac_category_picker"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/budget_input_box"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp"
            android:text=""
            android:textColor="#101010"
            android:textSize="14sp"
            android:hint="Enter a Category" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Percentage Share"
            android:textColor="#101010"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ac_percentage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/budget_input_box"
            android:hint="Enter percentage"
            android:inputType="number"
            android:paddingHorizontal="14dp"
            android:textColor="#101010"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ac_add_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/budget_button_primary"
            android:gravity="center"
            android:text="Add Category"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ac_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/budget_button_outlined"
            android:gravity="center"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#00C896"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
