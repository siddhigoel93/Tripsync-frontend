<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootOtp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9F3FD"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scrollViewOtp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="-40dp"
                android:layout_marginEnd="-48dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ellipse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Verification"
                android:textColor="#008BBF"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Verify the OTP and get started with the travel and adventures"
                android:textColor="#101010"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/otpCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_card"
                android:paddingStart="20dp"
                android:paddingTop="24dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subText">

                <TextView
                    android:id="@+id/verifyOtpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textColor="#101010"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/verifyOtpError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="(Incorrect OTP)"
                    android:textColor="#FF3B30"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:layout_constraintBaseline_toBaselineOf="@id/verifyOtpTitle"
                    app:layout_constraintStart_toEndOf="@id/verifyOtpTitle" />

                <TextView
                    android:id="@+id/otpSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="OTP is sent to your registered email id"
                    android:textColor="#737373"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/verifyOtpTitle" />

                <LinearLayout
                    android:id="@+id/otpContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/otpSubtitle">

                    <EditText
                        android:id="@+id/et1"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/otp_box_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#101010"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et2"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/otp_box_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#101010"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et3"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/otp_box_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#101010"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et4"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/otp_box_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#101010"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et5"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/otp_box_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#101010"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et6"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/otp_box_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#101010"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Resend OTP"
                    android:textColor="#00C896"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/otpContainer" />

                <TextView
                    android:id="@+id/btnVerify"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/next_button"
                    android:gravity="center"
                    android:text="Verify OTP"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvResendOtp" />

                <TextView
                    android:id="@+id/tvBackToLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Back to login"
                    android:textColor="#101010"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnVerify" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
