<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/greenback"
        app:tint="#00C896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AI Itinerary Planner"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/topSaveDraft"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3 of 3"
        android:textSize="12sp"
        android:textColor="#737373"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/topSaveDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Draft"
        android:textSize="14sp"
        android:textColor="#00C896"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:src="@drawable/progress3"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:id="@+id/pageScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/tripCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/source1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tripTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delhi Trip 2025"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tripDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 20 - 27"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#00C896"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tripMeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7 days  â€¢  Adventure"
                        android:textSize="12sp"
                        android:textColor="#737373"/>

                    <TextView
                        android:id="@+id/tripStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget Planning"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#00C896"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dayTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tabDay1"
                    style="@style/DayTabActive"
                    android:text="Day 1"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tabDay2"
                    style="@style/DayTabInactive"
                    android:text="Day 2"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tabDay3"
                    style="@style/DayTabInactive"
                    android:text="Day 3"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tabDay4"
                    style="@style/DayTabInactive"
                    android:text="Day 4"/>
            </LinearLayout>

            <TextView
                android:id="@+id/dayTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day 1 - Arrival"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:id="@+id/rvItinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipToPadding="false"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/btnCreateTrip"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="Create A trip"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_primary_teal_selector"
                android:layout_marginTop="14dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="#00C896"
                android:background="@drawable/btn_outline_white_teal_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
