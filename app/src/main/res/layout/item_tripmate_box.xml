<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_tripmate_card"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/bg_box_card">

        <ImageView
            android:id="@+id/iv_tripmate_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_trip_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_avatar_circle"
            android:contentDescription="tripmate image" />

        <TextView
            android:id="@+id/tv_tripmate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tripmate"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_tripmate_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined 3d ago"
            android:textAppearance="?attr/textAppearanceCaption"
            android:alpha="0.85"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
