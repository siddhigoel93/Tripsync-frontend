<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#D9F3FD">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_marginStart="246dp"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="-48dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ellipse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:fontFamily="sans-serif-black"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Adventure begins here!"
                android:textColor="#008BBF"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgTop" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sign up to plan smarter, travel better, and explore more."
                android:textColor="#101010"
                android:textSize="18sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/subText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/signUpCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_card"
                    android:paddingTop="24dp"
                    android:paddingBottom="36dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/titleSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign-up"
                        android:textColor="#101010"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <LinearLayout
                        android:id="@+id/emailLabelRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/titleSignUp"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/lblEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="#737373"
                            android:textSize="18sp"/>







                        <ImageView
                            android:id="@+id/ivEmailValid"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginStart="6dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_check_green"
                            android:visibility="gone"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:translationY="-1dp"/>







                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/emailContainer"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/input_border"
                        app:layout_constraintTop_toBottomOf="@id/emailLabelRow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="name@domain.com"
                            android:inputType="textEmailAddress"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="#101010"
                            android:textSize="16sp"
                            android:lines="1"
                            android:ellipsize="end"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/lblPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Enter Password"
                        android:textColor="#737373"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/emailContainer"
                        app:layout_constraintStart_toStartOf="parent" />

                    <FrameLayout
                        android:id="@+id/passwordContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/input_border"
                        app:layout_constraintTop_toBottomOf="@id/lblPassword"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@android:color/transparent"
                            android:hint="Enter Password"
                            android:inputType="textPassword"
                            android:paddingStart="16dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="48dp"
                            android:paddingBottom="10dp"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:lines="1"
                            android:ellipsize="end"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivTogglePass"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/eyedisable"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/pwRulesList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:paddingStart="8dp"
                        app:layout_constraintTop_toBottomOf="@id/passwordContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/passwordRulesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password must contain at least"
                            android:textColor="#737373"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_bold"
                            app:layout_constraintStart_toStartOf="@id/guideline_left"
                            />

                        <!-- Rule: Minimum 8 Characters -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">
                            <ImageView
                                android:id="@+id/icon1"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_close"
                                app:tint="#737373"/>
                            <TextView
                                android:id="@+id/rule1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8 characters"
                                android:textSize="12sp"
                                android:textColor="#737373"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>

                        <!-- Rule: Uppercase Letter -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">
                            <ImageView
                                android:id="@+id/icon2"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_close"
                                app:tint="#737373"/>
                            <TextView
                                android:id="@+id/rule2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="an uppercase character"
                                android:textSize="12sp"
                                android:textColor="#737373"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">
                            <ImageView
                                android:id="@+id/icon5"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_close"
                                app:tint="#737373"/>
                            <TextView
                                android:id="@+id/rule5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="a lowercase character"
                                android:textSize="12sp"
                                android:textColor="#737373"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>

                        <!-- Rule: Number -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">
                            <ImageView
                                android:id="@+id/icon3"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_close"
                                app:tint="#737373"/>
                            <TextView
                                android:id="@+id/rule3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="one special character"
                                android:textSize="12sp"
                                android:textColor="#737373"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>

                        <!-- Rule: Special Character -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">
                            <ImageView
                                android:id="@+id/icon4"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_close"
                                app:tint="#737373"/>
                            <TextView
                                android:id="@+id/rule4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="one number"
                                android:textSize="12sp"
                                android:textColor="#737373"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/roboto"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/lblConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Confirm Password"
                        android:textColor="#737373"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/pwRulesList"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvConfirmErrorInline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Both password are different)"
                        android:textColor="#D32F2F"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBaseline_toBaselineOf="@id/lblConfirm"
                        app:layout_constraintStart_toEndOf="@id/lblConfirm"
                        android:layout_marginStart="8dp"/>

                    <FrameLayout
                        android:id="@+id/confirmContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/input_border"
                        app:layout_constraintTop_toBottomOf="@id/lblConfirm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <EditText
                            android:id="@+id/etConfirm"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@android:color/transparent"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:paddingStart="16dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="48dp"
                            android:paddingBottom="10dp"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:lines="1"
                            android:ellipsize="end"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivToggleConfirm"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/eyedisable"/>
                    </FrameLayout>

                    <CheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/confirmContainer"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvTermsPrefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I accept all the"
                        android:textColor="#737373"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/cbTerms"
                        app:layout_constraintTop_toTopOf="@id/cbTerms"
                        app:layout_constraintBottom_toBottomOf="@id/cbTerms"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Terms and Condition"
                        android:textColor="#00C896"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/tvTermsPrefix"
                        app:layout_constraintTop_toTopOf="@id/tvTermsPrefix"
                        app:layout_constraintBottom_toBottomOf="@id/tvTermsPrefix"/>

                    <TextView
                        android:id="@+id/btnSignUp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/next_button"
                        android:gravity="center"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="Sign-up"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/cbTerms"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <LinearLayout
                        android:id="@+id/llBottomAuth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/btnSignUp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/tvHaveAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account?"
                            android:textColor="#737373"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvSignIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Sign In"
                            android:textColor="#00C896"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
