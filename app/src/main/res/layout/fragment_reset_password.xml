<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:overScrollMode="never">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9F3FD"
    android:fitsSystemWindows="true"
    android:id="@+id/resetPasswordFragment"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_upmid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ring"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="Reset Password"
        android:textColor="#008bbf"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/guideline_top" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Reset your password here."
        android:textColor="#000000"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/welcome"

        />


    <View
        android:id="@+id/signInCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toBottomOf="@id/guideline_upmid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Reset Password"
        android:textColor="#101010"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/guideline_middle" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:textColor="#737373"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/account"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/passwordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="(Password must be strong)"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/password"
        app:layout_constraintStart_toEndOf="@id/password"/>
    <ImageView
        android:layout_width="24sp"
        android:layout_height="24sp"
        app:layout_constraintStart_toEndOf="@id/password"
        app:layout_constraintTop_toTopOf="@id/password"
        android:src="@drawable/ibutton"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/passwordField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_border"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="#737373"
            android:textSize="14sp"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/PasswordEye"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/PasswordEye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/eyedisable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/passwordRules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/passwordField"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right">

        <TextView
            android:id="@+id/passwordRulesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password must contain at least"
            android:textColor="#737373"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            />

        <!-- Rule: Minimum 8 Characters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_close"
                app:tint="#737373"/>
            <TextView
                android:id="@+id/rule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 characters"
                android:textSize="12sp"
                android:textColor="#737373"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

        <!-- Rule: Uppercase Letter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_close"
                app:tint="#737373"/>
            <TextView
                android:id="@+id/rule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="an uppercase character"
                android:textSize="12sp"
                android:textColor="#737373"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/icon5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_close"
                app:tint="#737373"/>
            <TextView
                android:id="@+id/rule5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a lowercase character"
                android:textSize="12sp"
                android:textColor="#737373"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

        <!-- Rule: Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_close"
                app:tint="#737373"/>
            <TextView
                android:id="@+id/rule3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="one special character"
                android:textSize="12sp"
                android:textColor="#737373"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

        <!-- Rule: Special Character -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/icon4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_close"
                app:tint="#737373"/>
            <TextView
                android:id="@+id/rule4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="one number"
                android:textSize="12sp"
                android:textColor="#737373"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/passwordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="#737373"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/passwordRules"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/passwordConfirmError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="(Both password are different)"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/passwordConfirm"
        app:layout_constraintStart_toEndOf="@id/passwordConfirm"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/passwordConfirmField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_border"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/passwordConfirm"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etPassword2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#737373"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:backgroundTint="@color/blue"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivPasswordEye"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/ivPasswordEye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/eyedisable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/next_button"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        app:backgroundTint="#00B487"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintBottom_toTopOf="@id/signupContainer"
        android:layout_marginBottom="18dp"
        />

    <LinearLayout
        android:id="@+id/signupContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom">

        <TextView
            android:id="@+id/Have"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#737373"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign-In"
            android:textColor="#00C896"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>