<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Back button" />

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/cover_photo"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="Cover photo" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/placeholder_image"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/cover_photo"
                app:layout_constraintBottom_toBottomOf="@id/cover_photo"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="User profile picture"
                app:shapeAppearanceOverlay="@style/CircularShape"
                android:background="@null"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/white" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keshav Kumar"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:padding="0dp"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="keshavkumar@gmail.com"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="@id/name" />
            <EditText
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="+91 9555174923"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="@id/email" />

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="@id/name"
                app:layout_constraintBottom_toBottomOf="@id/contact"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="Edit profile" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bio_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/contact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/bio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/bio_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hey there! I'm a passionate traveler who loves exploring new cities, cultures, and cuisines..."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/bio_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/interests_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interests"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/bio_container"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/interest_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="3"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/interests_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardAdventure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    android:layout_marginBottom="11dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/travel_style_card">
                    <ImageView android:id="@+id/iconAdventure"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/adventure"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        app:tint="@color/icon_tint_selector" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adventure"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/iconAdventure"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cardRelaxation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/travel_style_card">
                    <ImageView
                        android:id="@+id/iconRelaxation"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/relaxation"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="@color/icon_tint_selector"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        android:contentDescription="Relaxation Icon" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relaxation"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/iconRelaxation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cardSpiritual"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/travel_style_card">
                    <ImageView android:id="@+id/iconSpiritual"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/spiritual"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="@color/icon_tint_selector"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spiritual"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/iconSpiritual"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cardHistoric"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:background="@drawable/travel_style_card">
                    <ImageView android:id="@+id/iconHistoric"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/historic"
                        app:tint="@color/icon_tint_selector"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historic"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/iconHistoric"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/gender_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/interest_flow"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/genderM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gender_selector"
                android:drawableStart="@drawable/malesign"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="20dp"
                android:text="Male"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/gender_label"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/genderF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gender_selector"
                android:drawableStart="@drawable/femalesign"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="20dp"
                android:text="Female"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/genderM"
                app:layout_constraintBottom_toBottomOf="@id/genderM"
                app:layout_constraintStart_toEndOf="@id/genderM"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/blood_group_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/genderM"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_half" />

            <EditText
                android:id="@+id/blood_group_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A+ (Positive)"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/blood_group_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_half" />

            <TextView
                android:id="@+id/allergies_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Allergies"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/gender"
                app:layout_constraintStart_toEndOf="@id/guideline_half"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/allergies_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/allergies_label"
                app:layout_constraintStart_toEndOf="@id/guideline_half"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/emergency_card"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/blood_group_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/emergency_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact"
                    android:textStyle="bold"
                    android:textColor="#C2185B"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/contact_name_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Name"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/emergency_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/contact_name_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Yash Krishnan"
                    android:inputType="textPersonName"
                    android:background="@drawable/edittext_white"
                    android:paddingVertical="12dp"
                    android:textColor="@color/black"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/contact_name_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/contact_phone_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Phone"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/contact_name_input"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/contact_phone_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4835984350"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_white"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/contact_phone_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/relationship_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Relationship"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/contact_phone_input"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Spinner
                    android:id="@+id/relationship_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/relationship_options"
                    android:background="@drawable/edittext_white"
                    android:paddingVertical="12dp"
                    android:textColor="@color/black"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toBottomOf="@id/relationship_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
