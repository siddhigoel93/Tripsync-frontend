<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/bgHero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/heroscreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.115"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_para"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_btns_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.755"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_btns_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.900"/>

    <FrameLayout
        android:id="@+id/logoTile"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:layout_constraintTop_toTopOf="@id/g_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_logo_tile_circle"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/logoMark"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/appicon" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="TripSync"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toTopOf="@id/g_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Plan. Sync. Connect"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.01"
        app:layout_constraintTop_toTopOf="@id/g_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/paragraph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineHeight="18sp"
        android:text="Elevate your trips with AI powered planning,\nreal-time expense tracking, and seamless\nconnectivity"
        android:textColor="#E6FFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="@id/g_para"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btnPrimary"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_tripsync_welcome_btn_primary"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Complete Your Profile"
        android:textAllCaps="false"
        android:textColor="#0F9EC6"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/g_btns_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btnSecondary"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_tripsync_welcome_btn_secondary"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Explore App"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/btnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/g_btns_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
