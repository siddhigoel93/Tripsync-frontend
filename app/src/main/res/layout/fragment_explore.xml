<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ExploreFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#D9F7EF"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/tripsync"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/profile"
                    style="@style/CircularShape"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageButton
        android:id="@+id/toolbar_btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_chat_bubble"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


        <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_header_background"
                    android:paddingVertical="48dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/motto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/righteous"
                        android:gravity="center"
                        android:text="Plan. Sync. Connect"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Elevate your trips with AI powered planning, \nreal-time expense tracking, and seamless connectivity"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/motto"
                        app:layout_constraintWidth_percent="0.8"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/complete_profile_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="@color/white"
                        android:text="Complete Your Profile"
                        android:textColor="@color/blue_500"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subtitle"
                        tools:ignore="HardcodedText" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp">

                <TextView
                    android:id="@+id/stories_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Travel Stories"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/travel_stories_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stories_title"
                    tools:listitem="@layout/item_travel_story" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_create_trip"
                    style="@style/ActionCardStyle"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#E6F7FD"
                    app:layout_constraintEnd_toStartOf="@id/card_ai_planner"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travel_stories_recycler_view">
                    <include layout="@layout/card_create_trip" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_ai_planner"
                    style="@style/ActionCardStyle"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/light_green_50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/card_create_trip"
                    app:layout_constraintTop_toBottomOf="@id/travel_stories_recycler_view">

                    <include layout="@layout/card_ai_planner" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_add_tripmates"
                    style="@style/ActionCardStyle"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/light_purple_50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/card_sos_emergency"
                    app:layout_constraintStart_toStartOf="@id/card_create_trip"
                    app:layout_constraintTop_toBottomOf="@id/card_create_trip">

                    <include layout="@layout/card_add_tripmates" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_sos_emergency"
                    style="@style/ActionCardStyle"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/light_red_50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="@id/card_ai_planner"
                    app:layout_constraintStart_toEndOf="@id/card_add_tripmates"
                    app:layout_constraintTop_toBottomOf="@id/card_ai_planner">
                    <include layout="@layout/card_sos_emergency" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:background="@color/light_gray_background">
                <TextView
                    android:id="@+id/trending_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="Trending Destinations"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/explore_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Explore More"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/trending_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/trending_title"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trending_destinations_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trending_title"
                    tools:listitem="@layout/item_destination_card" />
            </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/stay_informed_section_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trending_destinations_recycler_view">

                    <TextView
                        android:id="@+id/stay_informed_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:text="Stay Informed"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_weather_updates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/stay_informed_title">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:background="@drawable/weather_card_background">

                            <TextView
                                android:id="@+id/weather_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weather Updates"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/weather_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:alpha="0.8"
                                android:text="Delhi"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/weather_title"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/weather_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/cloud"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white"
                                tools:ignore="ContentDescription" />


                            <ImageView
                                android:id="@+id/yesterday"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="24dp"
                                android:src="@drawable/first"
                                app:layout_constraintEnd_toStartOf="@id/today"
                                app:layout_constraintHorizontal_chainStyle="spread"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/weather_subtitle" />

                            <TextView
                                android:id="@+id/temp_yesterday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.8"
                                android:text="Yesterday"
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toStartOf="@id/temp_today"
                                app:layout_constraintHorizontal_chainStyle="spread"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/yesterday"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/today"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="24dp"
                                android:src="@drawable/second"
                                app:layout_constraintEnd_toStartOf="@id/tomorrow"
                                app:layout_constraintStart_toEndOf="@id/yesterday"
                                app:layout_constraintTop_toBottomOf="@id/weather_subtitle" />

                            <TextView
                                android:id="@+id/temp_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.8"
                                android:text="Today"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto"
                              app:layout_constraintStart_toStartOf="@id/today"
                                app:layout_constraintEnd_toEndOf="@id/today"
                                app:layout_constraintTop_toBottomOf="@id/today"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/tomorrow"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="24dp"
                                android:src="@drawable/third"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/today"
                                app:layout_constraintTop_toBottomOf="@id/weather_subtitle" />

                            <TextView
                                android:id="@+id/temp_tomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.8"
                                android:text="Tomorrow"
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@id/temp_today"
                                app:layout_constraintTop_toBottomOf="@id/tomorrow"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:ignore="HardcodedText" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_trip_reminders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card_weather_updates">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:background="@drawable/reminders_card_background">

                            <TextView
                                android:id="@+id/reminders_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trip Reminders"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/reminders_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:alpha="0.8"
                                android:text="Never miss any important thing"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/reminders_title"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/bell_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/bell"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/reminder_flight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:drawableStart="@drawable/flight"
                                android:drawablePadding="12dp"
                                android:text="Flight check-in: 2 hours before"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/reminders_subtitle"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/reminder_restaurant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:drawableStart="@drawable/restaurant"
                                android:drawablePadding="12dp"
                                android:text="Restaurants booking: 30 min before"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/reminder_flight"
                                tools:ignore="HardcodedText" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#D9F3FD"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="Experience in AR"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/small_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Visit famous landmark virtually before your trip"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/image_block_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ar_preview_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ar_preview"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="16:9"
                        android:layout_marginHorizontal="16dp"
                        app:shapeAppearanceOverlay="@style/RoundedTopCorners"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#66000000"
                        app:layout_constraintTop_toTopOf="@id/ar_preview_image"
                        app:layout_constraintBottom_toBottomOf="@id/ar_preview_image"
                        app:layout_constraintStart_toStartOf="@id/ar_preview_image"
                        app:layout_constraintEnd_toEndOf="@id/ar_preview_image"
                        app:shapeAppearanceOverlay="@style/RoundedTopCorners" />

                    <ImageView
                    android:id="@+id/icon_vr"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:src="@drawable/vr_glasses"
                    app:tint="@color/white"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintTop_toTopOf="@id/ar_preview_image"
                    app:layout_constraintEnd_toEndOf="@id/ar_preview_image"
                    tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/virtual_tour_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Virtual Tour Preview"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintStart_toStartOf="@id/ar_preview_image"
                        app:layout_constraintBottom_toTopOf="@id/virtual_tour_subtitle"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/virtual_tour_subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Explore new places before travelling."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintStart_toStartOf="@id/ar_preview_image"
                        app:layout_constraintBottom_toBottomOf="@id/ar_preview_image"
                        tools:ignore="HardcodedText" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ar_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tour_available_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3D virtual Tour is available"
                        android:textColor="@color/black"
                        android:textSize="16sp"
