<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/fragment_signup"
        android:name="com.example.tripsync.Auth.fragment_signup"
        android:label="Sign Up"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_fragment_signup_to_fragment_otp"
            app:destination="@id/fragment_otp" />
        <action
            android:id="@+id/action_fragment_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragment_otp"
        android:name="com.example.tripsync.Auth.FragmentOtp"
        android:label="fragment_otp"
        tools:layout="@layout/fragment_otp">
        <action
            android:id="@+id/action_fragment_otp_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_fragment_otp_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/fragment_signup"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.tripsync.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_onboardingFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tripsync.Auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_forgot"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/fragment_signup" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.tripsync.Auth.ResetPasswordFragment"
        android:label="Reset Password">
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_resetOTP"
            app:destination="@id/resetOTP" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.tripsync.Auth.ForgotPasswordFragment"
        android:label="Forgot Password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_forgotPasswordFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/resetOTP"
        android:name="com.example.tripsync.Auth.ResetOTP"
        android:label="ResetOTP">
        <action
            android:id="@+id/action_resetOTP_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/forgotPasswordFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tripsync.ExploreFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_explore">
        <argument
            android:name="showHeader"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_homeFragment_to_fragment_personal_details"
            app:destination="@id/fragment_personal_details" />
        <action
            android:id="@+id/action_homeFragment_to_AIItinearyPlannerFragment"
            app:destination="@id/AIItinearyPlannerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_homeFragment_to_communityFragment"
            app:destination="@id/nav_community" />
        <action
            android:id="@+id/action_homeFragment_to_trendingDestinationFragment"
            app:destination="@id/trendingDestinationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_openProfileFragment"
            app:destination="@id/openProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_emergencySosFragment"
            app:destination="@id/emergencySosFragment" />
        <action
            android:id="@+id/action_homeFragment_to_travelStoryDetailFragment"
            app:destination="@id/travelStoryDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_connectionsTripmatesFragment"
            app:destination="@id/fragment_connections_tripmates" />
    </fragment>

    <fragment
        android:id="@+id/fragment_connections_tripmates"
        android:name="com.example.tripsync.ConnectionsTripmatesFragment"
        android:label="ConnectionsTripmates"
        tools:layout="@layout/fragment_connections_tripmates">
        <action
            android:id="@+id/action_fragment_connections_tripmates_to_recievedRequestsFragment"
            app:destination="@id/recievedRequestsFragment" />
    </fragment>

    <fragment
        android:id="@+id/emergencyFragment"
        android:name="com.example.tripsync.ProfileDetails.EmergencyFragment"
        android:label="fragment_emergency"
        tools:layout="@layout/fragment_emergency">
        <action
            android:id="@+id/action_emergencyFragment_to_preferencesFragment"
            app:destination="@id/preferencesFragment" />
        <action
            android:id="@+id/action_emergencyFragment_to_fragment_personal_details"
            app:destination="@id/fragment_personal_details" />
    </fragment>

    <fragment
        android:id="@+id/preferencesFragment"
        android:name="com.example.tripsync.ProfileDetails.PreferencesFragment"
        android:label="fragment_preferences"
        tools:layout="@layout/fragment_preferences">
        <action
            android:id="@+id/action_preferencesFragment_to_emergencyFragment"
            app:destination="@id/emergencyFragment" />
        <action
            android:id="@+id/action_preferencesFragment_to_contactVerifyFragment"
            app:destination="@id/contactVerifyFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.tripsync.ProfileDetails.fragment_tripsync_welcome"
        android:label="WelcomeFragment">
        <action
            android:id="@+id/action_welcomeFragment_to_fragment_personal_details"
            app:destination="@id/fragment_personal_details" />
    </fragment>

    <fragment
        android:id="@+id/fragment_personal_details"
        android:name="com.example.tripsync.ui.FragmentPersonalDetails"
        android:label="fragment_personal_details">
        <action
            android:id="@+id/action_fragment_personal_details_to_emergencyFragment"
            app:destination="@id/emergencyFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactVerifyFragment"
        android:name="com.example.tripsync.Auth.ContactVerifyFragment"
        android:label="ContactVerifyFragment">
        <action
            android:id="@+id/action_contactVerifyFragment_to_preferencesFragment"
            app:destination="@id/preferencesFragment" />
        <action
            android:id="@+id/action_contactVerifyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/AIItinearyPlannerFragment"
        android:name="com.example.tripsync.AIItinearyPlannerFragment"
        android:label="activity_a_i_itineary_planner"
        tools:layout="@layout/activity_a_i_itineary_planner">
        <action
            android:id="@+id/action_AIItinearyPlannerFragment_to_budgetFragment"
            app:destination="@id/budgetFragment" />
    </fragment>

    <fragment
        android:id="@+id/budgetFragment"
        android:name="com.example.tripsync.BudgetFragment"
        android:label="BudgetFragment">
        <argument
            android:name="tripName"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="startDate"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="endDate"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="preference"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="tripType"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_budgetFragment_to_budgetOverviewFragment"
            app:destination="@id/budgetOverviewFragment" />
    </fragment>

    <fragment
        android:id="@+id/budgetOverviewFragment"
        android:name="com.example.tripsync.BudgetOverviewFragment"
        android:label="BudgetOverviewFragment">
        <argument
            android:name="tripName"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="startDate"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="endDate"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="preference"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="totalBudget"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="tripType"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_budgetOverviewFragment_to_itinearyProgressThree2"
            app:destination="@id/itinearyProgressThree2" />
    </fragment>

    <fragment
        android:id="@+id/itinearyProgressThree2"
        android:name="com.example.tripsync.ItinearyProgressThree"
        android:label="ItinearyProgressThree" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.tripsync.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chats">
        <action
            android:id="@+id/action_chatFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_chatFragment_to_searchUsersFragment"
            app:destination="@id/searchUsersFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_community"
        android:name="com.example.tripsync.community.CommunityFragment"
        android:label="fragment_community"
        tools:layout="@layout/fragment_community">
        <action
            android:id="@+id/action_communityFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_nav_community_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.tripsync.community.CreatePostFragment"
        android:label="CreatePostFragment" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tripsync.community.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_nav_community"
            app:destination="@id/nav_community" />
    </fragment>

    <fragment
        android:id="@+id/openProfileFragment"
        android:name="com.example.tripsync.home.OpenProfileFragment"
        android:label="openProfileFragment" />

    <fragment
        android:id="@+id/searchUsersFragment"
        android:name="com.example.tripsync.SearchUsersFragment"
        android:label="Search Users">
        <action
            android:id="@+id/action_searchUsersFragment_to_chatThreadFragment"
            app:destination="@id/chatThreadFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/chatThreadFragment"
        android:name="com.example.tripsync.ChatThreadFragment"
        android:label="ChatThreadFragment">
        <argument
            android:name="conversationId"
            app:argType="integer" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/emergencySosFragment"
        android:name="com.example.tripsync.home.EmergencySosFragment"
        android:label="EmergencySosFragment" />

    <fragment
        android:id="@+id/travelStoryDetailFragment"
        android:name="com.example.tripsync.TravelStoryDetailFragment"
        android:label="TravelStoryDetail"
        tools:layout="@layout/fragment_travel_story_detail">
        <argument
            android:name="place_id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <fragment
        android:id="@+id/recievedRequestsFragment"
        android:name="com.example.tripsync.recieved_RequestsFragment"
        android:label="ReceivedRequests"
        tools:layout="@layout/recieved_fragment_received_requests" />

</navigation>
