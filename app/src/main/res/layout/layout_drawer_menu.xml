<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_menu_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <include layout="@layout/nav_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/menu_profile"
                style="@style/DrawerMenuItem"
                android:text="Profile" />

            <TextView
                android:id="@+id/menu_weather"
                style="@style/DrawerMenuItem"
                android:text="Weather" />

            <TextView
                android:id="@+id/menu_add_tripmates"
                style="@style/DrawerMenuItem"
                android:text="Add Tripmates" />

            <TextView
                android:id="@+id/menu_friends"
                style="@style/DrawerMenuItem"
                android:text="Friends" />

            <TextView
                android:id="@+id/menu_train_info"
                style="@style/DrawerMenuItem"
                android:text="Train Info" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/menu_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logout" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_sos"
           android:src="@drawable/sos_icon"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>