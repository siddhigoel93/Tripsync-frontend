<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.example.tripsync.AIItinearyPlannerFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1186"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8633"/>

    <ScrollView
        android:id="@+id/rwdxa89ztchn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/r5t6xdis8qsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_blue_to_purple_rounded_15"
                android:paddingVertical="20dp"
                android:paddingHorizontal="34dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="28dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rzg6mhub8veq"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_marginEnd="32dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/itenaryai"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rtumtb66em1o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI-Powered Itinerary"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/receahnewfss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get personalized recommendations based on your preferences"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/rs4zp87w9bp9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip name"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="7dp"/>

            <EditText
                android:id="@+id/rkfj7pis4rom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_card"
                android:hint="e.g, Delhi Trip 2025"
                android:inputType="text"
                android:paddingVertical="14dp"
                android:paddingHorizontal="12dp"
                android:textColor="#737373"
                android:textSize="14sp"
                android:layout_marginBottom="17dp"/>

            <TextView
                android:id="@+id/rc8472uxv84l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
