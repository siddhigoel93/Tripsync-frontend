<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/rxhsic4eeuuk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/r4ne2nlc4jma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ryx47lujawh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rg5ftn2esqmo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:elevation="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="19dp"
                        android:paddingTop="37dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/rgv1nuidrjxq"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/left_arrow" />

                        <LinearLayout
                            android:id="@+id/r6bwrrakypn6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/r5qgcj4f5dwp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AI Itinerary Planner"
                                android:textColor="#101010"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/rtmzzf6dvoo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="80dp"
                                android:text="Step 2 of 3"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/r3pb5pxkyz6n"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/r112ay9ggc4a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">
                            <TextView
                                android:id="@+id/ria7b5gbjr7a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save Draft"
                                android:textColor="#00C896"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rtb189jguu5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingVertical="22dp">

                        <LinearLayout
                            android:id="@+id/rbdak2h6qwn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginHorizontal="18dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rdgzhh8229lu"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="23dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/left" />

                            <ImageView
                                android:id="@+id/rr627b73nh4h"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="23dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/progress2" />

                            <ImageView
                                android:id="@+id/ryaw8d7d9lw"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/right" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/r32ckz08gnfb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/r57bpixek8i4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="53dp"
                                android:text="Details"
                                android:textColor="#101010"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/rhxlxmykel2e"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="40dp"
                                android:text="Budget"
                                android:textColor="#00C896"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/r7y1rehj50mx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AI itinerary"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r78v8empqis3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/source1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="11dp">

                    <LinearLayout
                        android:id="@+id/rmruecjd3psj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rwenfcmsasp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Delhi Trip 2025"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/r_trip_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 days  â€¢  Adventure"
                            android:textColor="#4F4F4F"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/r_trip_date_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 20 - 27"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budget Planning"
                            android:textColor="#00C896"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/budget_outer_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/budget_outer_card_gray"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/budget_inner_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/budget_inner_card_white"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Trip Budget"
                            android:textColor="#101010"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/r3rxv1dm1581"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/budget_input_box"
                            android:hint="Enter total budget"
                            android:inputType="number"
                            android:paddingHorizontal="14dp"
                            android:textColor="#101010"
                            android:textColorHint="#9E9E9E"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/rdn28kg5a5ln"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/budget_chip"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:text="+500"
                                android:textColor="#00C896"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/rdv457bw9t4e"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/budget_chip"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:text="+1000"
                                android:textColor="#00C896"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/r8pj2xl6mt3x"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/budget_chip"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:text="+2000"
                                android:textColor="#00C896"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:id="@+id/r4d0brug0pm"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/budget_button_primary"
                        android:gravity="center"
                        android:text="Continue to AI Itinerary"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r0jikwvfgklc"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/budget_button_outlined"
                        android:gravity="center"
                        android:text="Save Draft"
                        android:textAllCaps="false"
                        android:textColor="#00C896"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
