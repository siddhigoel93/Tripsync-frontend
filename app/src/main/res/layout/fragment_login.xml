<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9F3FD"
    android:fitsSystemWindows="true"
    android:id="@+id/loginFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_upmid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_midd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ring"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome\nBack!"
        android:textColor="#008bbf"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_black"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your travel companion awaits. Let’s\ncontinue the journey."
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        />

    <ImageView
        android:id="@+id/invtdellipse"
        android:layout_width="95dp"
        android:layout_height="130dp"
        android:src="@drawable/bottomring"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginTop="40dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signInCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toTopOf="@id/invtdellipse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="70dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign-In"
                    android:textColor="#101010"
                    android:textSize="28sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="0dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#737373"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:id="@+id/usernameError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Invalid email)"
                        android:visibility="gone"
                        android:textColor="#FF0000"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"/>
                    <ImageView
                        android:id="@+id/verified"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="verified image"
                        android:src="@drawable/verified"
                        android:visibility="gone"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>





                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="name@domain.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/input_border"
                    android:padding="12dp"
                    android:textColor="#737373"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#737373"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:id="@+id/passwordError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Empty field)"
                    android:visibility="gone"
                    android:textColor="#FF0000"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"/>
            </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/passwordField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_border"
                    android:padding="2dp">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="#737373"
                        android:textSize="14sp"
                        android:paddingVertical="12dp"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/roboto"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="@id/passwordField"
                        app:layout_constraintBottom_toBottomOf="@id/passwordField"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivPasswordEye"/>

                    <ImageView
                        android:id="@+id/ivPasswordEye"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/eyedisable"
                        app:layout_constraintBottom_toBottomOf="@id/passwordField"
                        app:layout_constraintTop_toTopOf="@id/passwordField"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="12dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:textColor="#00C896"
                    android:textSize="14sp"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="end"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign-In"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="24dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/nextbutton"/>

                <LinearLayout
                    android:id="@+id/signupContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/dontHave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don’t have account?"
                        android:textColor="#737373"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign-up"
                        android:textColor="#00C896"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
