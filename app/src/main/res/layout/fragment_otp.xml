<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".fragment_otp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D9F3FD"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_width="360dp"
            tools:layout_height="800dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gStart"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gEnd"
                android:orientation="vertical"
                app:layout_constraintGuide_end="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gTop"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gCardTop"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2688"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="0dp"
                android:layout_height="86dp"
                android:fontFamily="sans-serif-black"
                android:text="Verification"
                android:textColor="#008BBF"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/gTop"
                app:layout_constraintStart_toStartOf="@id/gStart"
                app:layout_constraintEnd_toEndOf="@id/gEnd" />

            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_marginTop="-55dp"
                android:scaleType="fitXY"
                android:src="@drawable/ellipse"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gEnd" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Verify the OTP and get started with the travel and adventures"
                android:textColor="#101010"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/headline"
                app:layout_constraintStart_toStartOf="@id/gStart"
                app:layout_constraintEnd_toEndOf="@id/gEnd" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/otpCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_card"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toTopOf="@id/gCardTop"
                app:layout_constraintStart_toStartOf="@id/gStart"
                app:layout_constraintEnd_toEndOf="@id/gEnd"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/titleOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textColor="#101010"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/otpHint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="OTP is sent to your registered email id"
                    android:textColor="#737373"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/titleOtp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/otpRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:weightSum="6"
                    app:layout_constraintTop_toBottomOf="@id/otpHint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <EditText
                        android:id="@+id/et1"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:background="@drawable/otp_box_force" />

                    <EditText
                        android:id="@+id/et2"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:background="@drawable/otp_box_force" />

                    <EditText
                        android:id="@+id/et3"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:background="@drawable/otp_box_force" />

                    <EditText
                        android:id="@+id/et4"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:background="@drawable/otp_box_force" />

                    <EditText
                        android:id="@+id/et5"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:background="@drawable/otp_box_force" />

                    <EditText
                        android:id="@+id/et6"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:background="@drawable/otp_box_force" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Resend OTP"
                    android:textColor="#00C896"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/otpRow"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/btnVerify"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="212dp"
                    android:background="@drawable/next_button"
                    android:gravity="center"
                    android:text="Verify OTP"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/tvResendOtp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvBackToLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Back to login"
                    android:textColor="#101010"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/btnVerify"
                    app:layout_constraintStart_toStartOf="@id/btnVerify"
                    app:layout_constraintEnd_toEndOf="@id/btnVerify" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
