<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/budget_inner_card_white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Trip Budget"
            android:textColor="#101010"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/de_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/budget_input_box"
            android:hint="Enter total budget"
            android:inputType="number"
            android:paddingHorizontal="14dp"
            android:textColor="#101010"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/de_chip_500"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/budget_chip"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="+500"
                android:textColor="#00C896"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/de_chip_1000"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/budget_chip"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="+1000"
                android:textColor="#00C896"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/de_chip_2000"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/budget_chip"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="+2000"
                android:textColor="#00C896"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/de_done"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/budget_button_primary"
            android:gravity="center"
            android:text="Done Changes"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/de_cancel"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/budget_button_outlined"
            android:gravity="center"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#00C896"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
