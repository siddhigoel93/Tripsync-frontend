<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rlpnl49dl9rm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/rhlobqa6tu8u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rzfya04igz7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="28dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/r56rex9ns33d"
                        android:layout_width="101dp"
                        android:layout_height="101dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/camera"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:id="@+id/rd23risn7v8f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/r6hfxpjw2gfw"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="57dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Add Your Photo" />

                        <TextView
                            android:id="@+id/ruusr0nwhven"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Help your tripmates recognize you" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rbqifq72tpmj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pdetailgrayrounded"
                android:paddingVertical="26dp"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/r7u70iszfshp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rn2ei6r0ugm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/r1peih9bctkb"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginBottom="7dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="First Name" />

                        <EditText
                            android:inputType="text"
                            android:hint="Sam"
                            android:id="@+id/ruy6dpr196f"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:padding="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rl3jphj8lz99"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recjwdlg3nbi"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginBottom="7dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Last Name" />

                        <EditText
                            android:inputType="text"
                            android:hint="Smith"
                            android:id="@+id/rcuxd094pa8j"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:padding="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rxpb4zobhsre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rbyyce0977vp"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Phone Number" />

                    <LinearLayout
                        android:id="@+id/rd5mfw0f4fw5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/rne86n712sxi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="8dp"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/r7q2wwnyasv"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/indiaflag"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/rky6hlaitpeg"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_marginEnd="6dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="+91" />

                            <ImageView
                                android:id="@+id/rixe2dqp03se"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/downarrow"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/r74p8jg2m2qd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="12dp"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:hint="9XXXXXXXX"
                            android:inputType="phone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r9vp9p77ss2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rlbmvk0l8v59"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Date of Birth" />

                    <LinearLayout
                        android:id="@+id/rhn9qxexskx9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/pdetailsroundedwhite2"
                        android:paddingRight="13dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/rcousyd38th8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@null"
                            android:hint="YYYY-MM-DD"
                            android:paddingLeft="13dp"
                            android:paddingVertical="15dp"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:focusable="false" />

                        <ImageView
                            android:id="@+id/rl365qb5wb4"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/suitcase"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rotttmm73by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/raak14y58hao"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="11dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Gender" />

                    <LinearLayout
                        android:id="@+id/ryv5g3njve8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/rfcvab5pvu3c"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="22dp"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rxm96cod05ui"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/malesign"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/rad4eo3qxvhc"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Male" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rawr3vr06wif"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:paddingVertical="13dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/raxgutgmnp79"
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/femalesign"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/rxlmnchchce8"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Female" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rk3dh7nhmde"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/r38keohjpnqd"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginEnd="1dp"
                                android:src="@drawable/neutralgender"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/rsjilsdrku0k"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Others" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r5qhotqcofyw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rpm5n0aoz29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/r6pdyky3skua"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginBottom="11dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="About Me" />

                        <LinearLayout
                            android:id="@+id/rlu06xfct69"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pdetailsroundedwhite2"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/rmwn47x6u6m"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:gravity="top|start"
                                android:hint="Tell us bit about yourself and your different travel experience."
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textColor="#000000"
                                android:textColorHint="#999999"
                                android:textSize="14sp"
                                android:inputType="textMultiLine"
                                android:overScrollMode="ifContentScrolls"
                                android:scrollbars="vertical" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rtywh8w0ee3"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="This helps  other travelers connect with you" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/pdetailsroundedgreen"
                android:paddingVertical="11dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="83dp"
                android:layout_marginHorizontal="20dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rkl8eel5bzb"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Next" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
